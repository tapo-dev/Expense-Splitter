<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoommateApp.Maui.Views.AddExpensePage"
             Title="Přidat nový výdaj">

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            
            <!-- Popis výdaje -->
            <Label Text="Popis výdaje" FontAttributes="Bold" Margin="0,5,0,0"/>
            <Entry x:Name="PopisEntry" Placeholder="Např. Toaletní papír" HeightRequest="40"/>
            
            <!-- Částka -->
            <Label Text="Částka (Kč)" FontAttributes="Bold" Margin="0,5,0,0"/>
            <Entry x:Name="CastkaEntry" Placeholder="Zadej částku v Kč" Keyboard="Numeric" HeightRequest="40"/>
            
            <!-- Datum výdaje -->
            <Label Text="Datum výdaje" FontAttributes="Bold" Margin="0,5,0,0"/>
            <DatePicker x:Name="DatumPicker" Format="dd.MM.yyyy" HeightRequest="40"/>
            
            <!-- Skupina -->
            <Label Text="Skupina" FontAttributes="Bold" Margin="0,5,0,0"/>
            <Picker x:Name="SkupinaPicker" Title="Vyber skupinu" ItemDisplayBinding="{Binding Nazev}" HeightRequest="40"/>
            
            <!-- Plátce -->
            <Label Text="Kdo to platil" FontAttributes="Bold" Margin="0,5,0,0"/>
            <Picker x:Name="PlatilPicker" Title="Kdo to platil" ItemDisplayBinding="{Binding Jmeno}" HeightRequest="40"/>
            
            <!-- Účastníci výdaje -->
            <Label Text="Účastníci výdaje" FontAttributes="Bold" Margin="0,5,0,0"/>
            <Frame Padding="10" BorderColor="LightGray" CornerRadius="5">
                <StackLayout>
                    <Label x:Name="UcastniciInfo" Text="Vyberte, kdo se účastní výdaje:" TextColor="Gray"/>
                    <StackLayout x:Name="UcastniciCheckboxContainer" Spacing="5">
                        <!-- Dynamický přidávání -->
                    </StackLayout>
                </StackLayout>
            </Frame>
            
            <!-- Tlačítka -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,20">
                <Button Grid.Column="0" Text="Zrušit" BackgroundColor="Gray" TextColor="White" 
                        Clicked="OnCancelClicked" CornerRadius="5" HeightRequest="45"/>
                <Button Grid.Column="1" Text="Uložit výdaj" BackgroundColor="DodgerBlue" TextColor="White" 
                        Clicked="OnSaveClicked" CornerRadius="5" HeightRequest="45"/>
            </Grid>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>